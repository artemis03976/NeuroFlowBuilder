{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@node-configs": ["./src/configs/node"],
      "@error-configs": ["./src/configs/error"],
      "@optimizer-configs": ["./src/configs/optimizer"],
    },
    "types": [
      "vite/client"
    ]
  },
  "include": ["src"]
}
